
canvas
  height 70vh
  width 70vw
  background-size cover
  background-repeat no-repeat
  position absolute
  top 6vw
  left 15vw
  z-index -1
  filter drop-shadow(0vw 10vw 25vw rgba(0,0,0,1))

html
  background-image url('https://assets.codepen.io/4332848/clean_metal.jpg')
  position fixed
  top 0
  left 0
  min-width 100%
  min-height 100%
  background-size cover
  background-repeat no-repeat
  
.spaceWindow
  height 70vh
  width 70vw
  margin 0 auto
  margin-top 3vw
  background radial-gradient(rgba(0,0,255,0.2),rgba(0,0,0,0.2))
  background-position center center
  background-size cover
  //box-shadow 0.5vw 0.5vw 1vw 0.5vw inset rgba(0,9,8,0.3)
  z-index -1
  border 3vw inset silver
  border-radius 3% 3% 3%
    
.container
  display grid
  height 100%
  width 100%
  grid-template-columns 10% 10% 10% 10% 10% 10% 10% 10% 10% 10%
  grid-template-rows 10% 10% 10% 10% 10% 10% 10% 10% 10% 10%
  z-index 0
  background transparent 

.star
  height 0.75vw
  width 0.75vw
  grid-column-start 3
  grid-row-start 4
  background-color white
  border-radius 50%
  opacity 0 
.star:nth-child(1)
  grid-column-start 3
  grid-row-start 2
.star:nth-child(2)
  grid-column-start 1
  grid-row-start 2
.star:nth-child(3)
  grid-column-start 3
  grid-row-start 2
.star:nth-child(4)
  grid-column-start 4
  grid-row-start 2
.star:nth-child(5)
  grid-column-start 2
  grid-row-start 2
.star:nth-child(6)
  grid-column-start 4
  grid-row-start 2
  
.grid
  height 300px
  width 28vw
  margin-top 20px
  grid-column-start 4
  grid-row-start 2
  display grid
  grid-template-columns 20vw 20vw
  grid-template-rows 10vw 10vw 10vw 10vw 
  overflow hidden
  column-gap 10vw
  z-index -1
  background transparent
  
.lilButton
  height 2.5vw
  width 2.5vw
  position absolute
  border 0.2vw inset transparent
  margin 0 auto
  margin-left 35vw
  border-radius 50%
  box-shadow 0.1vw 0.1vw 0.15vw 0.15vw inset

.stand
  height 15vh
  width 10vw
  position absolute
  border 1px solid black
  margin 0 auto
  margin-left 31vw
  margin-top 1vh
  z-index -10
  background silver